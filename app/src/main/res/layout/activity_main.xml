<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111"
    android:orientation="vertical"
    android:padding="20dp"
    android:weightSum="3"
    tools:context="maxxtv.movies.stb.MovieCategoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">
                <EditText
                    android:id="@+id/search_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:background="@drawable/selector_et_search"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:hint="Search"
                    android:maxLines="1"
                    android:textColorHint="#cdcdcd"
                    android:maxWidth="100mm"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="#8dbdcf" />
                <Button
                    android:id="@+id/btn_search"
                    android:layout_width="27dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_margin="5dp"
                    android:background="@drawable/selector_btn_search" />
            </FrameLayout>


        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/movie_categoriies_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:orientation="horizontal"
        android:padding="5dp"

        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Top Movies"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/top_movies_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="5dp" />
            <TextView
                android:id="@+id/no_topMovies"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="No Movie Added"
                android:gravity="center"
                android:padding="5dp"
                android:visibility="gone"
                android:textColor="@color/color_text_silver"/>


        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.45"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="My WatchList"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/user_playlist_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scrollbars="none" />

            <TextView
                android:id="@+id/no_favMovies"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="No Movie Added"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/color_text_silver"
                android:visibility="gone"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
