<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/loadingLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/item_unselectedd"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:alpha="0.5"
        android:scaleType="centerInside"
        android:src="@drawable/movies_icon" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:theme="@style/RedAccent"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:id="@+id/loading_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/loading_movies"
        android:textColor="@color/color_text_silver"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/txt_version_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/color_text_silver"
        android:text="@string/label_version"
        android:textAppearance="?android:attr/textAppearanceSmall"/>




</LinearLayout>